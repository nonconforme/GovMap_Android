<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/blue.light</item>
        <item name="colorPrimaryDark">@color/blue.dark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="colorPrimary">@color/blue.light</item>
        <item name="colorPrimaryDark">@color/blue.dark</item>
    </style>

    <style name="SelectAddressEditTextStyle" parent="Base.V12.Widget.AppCompat.EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:background">@drawable/select_address_edit_text_bckg</item>
    </style>
    
    <style name="MainButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/main_btn_bckg</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SmallButtonStyle" parent="MainButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_margin">30dp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue.light"
    tools:context=".SelectAddressActivity">


    <EditText
        android:id="@+id/etHome_ASA"
        style="@style/SelectAddressEditTextStyle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="numberSigned"
        android:hint="@string/hint.home"
        android:imeOptions="actionSearch"/>

    <EditText
        android:id="@+id/etStreet_ASA"
        style="@style/SelectAddressEditTextStyle"
        android:layout_above="@id/etHome_ASA"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint.street"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/etCity_ASA"
        style="@style/SelectAddressEditTextStyle"
        android:layout_above="@id/etStreet_ASA"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint.city"
        android:imeOptions="actionNext">
        <requestFocus/>
    </EditText>


    <Button
        android:id="@+id/btnFind_ASA"
        style="@style/SmallButtonStyle"
        android:layout_below="@id/etHome_ASA"
        android:layout_centerHorizontal="true"
        android:text="@string/text.search"/>

</RelativeLayout>
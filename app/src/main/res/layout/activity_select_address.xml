<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAddressActivity">

    <EditText
        android:id="@+id/etCity_ASA"
        style="@style/SelectAddressEditTextStyle"
        android:layout_centerHorizontal="true"
        android:gravity="left|center_vertical"
        android:hint="@string/hint.city"
        android:imeOptions="actionNext"
        android:layout_marginTop="50dp">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etStreet_ASA"
        style="@style/SelectAddressEditTextStyle"
        android:layout_below="@id/etCity_ASA"
        android:layout_centerHorizontal="true"
        android:gravity="left|center_vertical"
        android:hint="@string/hint.street"
        android:imeOptions="actionNext" />


    <EditText
        android:id="@+id/etHome_ASA"
        style="@style/SelectAddressEditTextStyle"
        android:layout_below="@id/etStreet_ASA"
        android:layout_centerHorizontal="true"
        android:gravity="left|center_vertical"
        android:hint="@string/hint.home"
        android:imeOptions="actionSearch"/>


    <Button
        android:id="@+id/btnFind_ASA"
        style="@style/SmallButtonStyle"
        android:layout_below="@id/etHome_ASA"
        android:layout_centerHorizontal="true"
        android:text="@string/text.search" />

</RelativeLayout>
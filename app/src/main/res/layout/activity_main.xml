<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <Button
        style="@style/MainButtonStyle"
        android:text="@string/text.find_geo_number_using_current_placing"
        android:id="@+id/btnFindGeoNumberByCurPos_AM"
        android:layout_above="@+id/btnFindAddressByGeoNumber_AM"
        android:layout_alignLeft="@+id/btnFindGeoNumberByAddress_AM"
        android:layout_alignStart="@+id/btnFindGeoNumberByAddress_AM" />

    <Button
        style="@style/MainButtonStyle"
        android:text="@string/text.find_geo_number_using_address"
        android:id="@+id/btnFindGeoNumberByAddress_AM"
        android:layout_above="@+id/btnFindGeoNumberByCurPos_AM"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MainButtonStyle"
        android:text="@string/text.find_address_using_geo_number"
        android:id="@+id/btnFindAddressByGeoNumber_AM"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnFindGeoNumberByCurPos_AM"
        android:layout_alignStart="@+id/btnFindGeoNumberByCurPos_AM" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:textColor="@color/blue.light"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFindAddressByGeoNumber_AM"
        style="@style/MainButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/text.find_address_using_lot_parcel"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnFindGeoNumberByCurPos_AM"
        style="@style/MainButtonStyle"
        android:layout_above="@id/btnFindAddressByGeoNumber_AM"
        android:layout_alignLeft="@id/btnFindAddressByGeoNumber_AM"
        android:layout_alignStart="@id/btnFindAddressByGeoNumber_AM"
        android:text="@string/text.find_lot_parcel_using_current_location" />

    <Button
        android:id="@+id/btnFindGeoNumberByAddress_AM"
        style="@style/MainButtonStyle"
        android:layout_above="@id/btnFindGeoNumberByCurPos_AM"
        android:layout_alignLeft="@id/btnFindAddressByGeoNumber_AM"
        android:layout_alignStart="@id/btnFindAddressByGeoNumber_AM"
        android:text="@string/text.find_lot_parcel_using_address" />

    <TextView
        android:id="@+id/txt_Relocate_AM"
        android:layout_above="@id/btnFindGeoNumberByAddress_AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/blue.light"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/txt_Relocate_AM"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="@dimen/main_logo_size"
            android:layout_height="@dimen/main_logo_size"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

    </RelativeLayout>
</RelativeLayout>
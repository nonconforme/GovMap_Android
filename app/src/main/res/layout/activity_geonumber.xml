<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue.light">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/etGeoNum1_AGN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SelectAddressEditTextStyle"
            android:hint="@string/hint.geonum1"
            android:imeOptions="actionNext"/>
        <EditText
            android:id="@+id/etGeoNum2_AGN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SelectAddressEditTextStyle"
            android:hint="@string/hint.geonum2"
            android:imeOptions="actionSearch"/>

        <Button
            android:id="@+id/btnSearch_AGN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text.search"
            android:layout_alignLeft="@+id/etHome_ASA"
            android:layout_alignStart="@+id/etHome_ASA" />
    </LinearLayout>

</RelativeLayout>